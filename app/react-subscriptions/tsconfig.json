{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "preserve",
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "baseUrl": "../../",
    "paths": {
      "formik": [
        "packages/formik/src"
      ],
      "@formik/react-context-selector": [
        "packages/@formik/react-context-selector/src"
      ],
      "@formik/react-mutable-source": [
        "packages/@formik/react-mutable-source/src"
      ],
      "@formik/core": [
        "packages/@formik/core/src"
      ],
      "@formik/app-shared": [
        "app/shared/src"
      ],
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
